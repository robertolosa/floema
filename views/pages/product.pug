extends ../base.pug

block variables 
  - var template = 'product'

block content
  .product 
    .product__wrapper
      figure.product__media 
        img.product__media__image(alt=product.data.image.alt src=product.data.image.url)

      .product__information 
        p.product__information__collection=`${product.data.collection.data.title} collection`

        h1.product__information__title=product.data.title

        .product__information__content 
          .product__information__highlights
            each highlight in product.data.highlights
              p.product__information__highlight 
                if highlight.highlights_icon.toLowerCase() == 'arrow'
                  svg.product__information__highlight__icon(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 40 40")
                    path(fill="none" stroke="#fff" d="M20,0.5c10.8,0,19.5,8.7,19.5,19.5S30.8,39.5,20,39.5S0.5,30.8,0.5,20S9.2,0.5,20,0.5z")
                    path(stroke="#fff" d="M14.8,25.5l11.3-11.3")
                    path(fill="#fff" d="M30.8,9.5l-0.7,2.4l0,2.6l-1.9-2.3l-2.3-1.9l2.6,0L30.8,9.5z")
                    path(fill="#fff" d="M10.2,30.1l0.7-2.4l0-2.6l1.9,2.3l2.3,1.9l-2.6,0L10.2,30.1z")
                else
                  svg.product__information__highlight__icon(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 40 40")
                    path(fill="#fff" d="M24.3,9.9l-2.8,8.6l8.7-2.6L22.1,20l8.2,4.3l-8.7-2.8l2.8,8.9L20.1,22l-4.1,8.2l2.6-8.7L10,24.2l8.2-4.2l-8.3-4.3l8.8,2.8l-2.8-8.8l4.3,8.3L24.3,9.9z")
                    path(fill="none" stroke="#fff" d="M20,0.5c10.8,0,19.5,8.7,19.5,19.5S30.8,39.5,20,39.5S0.5,30.8,0.5,20S9.2,0.5,20,0.5z")

                span.product__information__highlight__text!=highlight.highlights_text.replace(/\n/, '<br>')

          .product__information__list
            each item in product.data.informations
              p.product__information__item 
                strong.product__information__item__label=item.informations_label 
                span.product__information__item__description=item.informations_description

          a.product__information__link(href=product.data.link_url.url target="_blank" rel="noreferrer noopener")=product.data.link_text

    button.product__button Close
      svg.product__button__icon(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 124 60")
        path(stroke="currentColor" fill="none" d="M62,0.5c34,0,61.5,13.2,61.5,29.5S96,59.5,62,59.5S0.5,46.3,0.5,30S28,0.5,62,0.5z")